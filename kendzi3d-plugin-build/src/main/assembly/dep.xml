<?xml version="1.0"?>
<assembly>
  <!-- TODO: a jarjar format would be better -->
  <id>dep</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <includes>
        <include>*.txt</include>
      </includes>
      <outputDirectory/>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory/>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <excludes>
        <!-- Unnecessary -->
        <exclude>com.google.code.findbugs:jsr305</exclude>
        <exclude>com.google.errorprone:error_prone_annotations</exclude>
        <!--<exclude>com.google.guava:failureaccess</exclude> Needed by guava-->
        <!--<exclude>com.google.guava:guava</exclude> - Needed by inject-->
        <exclude>com.google.guava:listenablefuture</exclude>
        <exclude>com.google.j2objc:j2objc-annotations</exclude>
        <!-- From jaxb plugin -->
        <exclude>jakarta.activation:jakarta.activation-api</exclude>
        <!--<exclude>jakarta.inject:jakarta.inject-api</exclude> - Not currently included in base plugin -->
        <exclude>jakarta.xml.bind:jakarta.xml.bind-api</exclude>
        <exclude>javax.xml.bind:jaxb-api</exclude>
        <exclude>javax.inject:javax.inject</exclude>
        <!-- Unnecessary -->
        <exclude>org.checkerframework:checker-qual</exclude>
        <!-- from EJML plugin -->
        <exclude>org.ejml:ejml-cdense</exclude>
        <exclude>org.ejml:ejml-core</exclude>
        <exclude>org.ejml:ejml-ddense</exclude>
        <exclude>org.ejml:ejml-dsparse</exclude>
        <exclude>org.ejml:ejml-fdense</exclude>
        <exclude>org.ejml:ejml-fsparse</exclude>
        <exclude>org.ejml:ejml-simple</exclude>
        <exclude>org.ejml:ejml-zdense</exclude>
        <!-- From LWJGL plugin -->
        <exclude>org.joml:joml</exclude>
        <exclude>org.lwjgl:lwjgl-jawt</exclude>
        <exclude>org.lwjgl:lwjgl-opengl</exclude>
        <exclude>org.lwjgl:lwjgl</exclude>
        <exclude>org.lwjglx:lwjgl3-awt</exclude>
        <!-- Unnecessary -->
        <exclude>org.slf4j:slf4j-simple</exclude>
        <exclude>org.apache.logging.log4j:log4j-core</exclude>
        <exclude>org.apache.logging.log4j:log4j-api</exclude>
        <exclude>org.apache.logging.log4j:log4j-slf4j-impl</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
